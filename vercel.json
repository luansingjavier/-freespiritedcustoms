{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "framework": "nextjs",
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "routes": [
    {
      "src": "/_next/static/(.*)",
      "dest": "/_next/static/$1",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    { "src": "/(.*).png", "dest": "/$1.png" },
    { "src": "/(.*).jpg", "dest": "/$1.jpg" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
